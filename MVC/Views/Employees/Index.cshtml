@*View modal starts*@
<div id="detailsModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">View Details</h4>
            </div>
            <div class="modal-body form-horizontal">
                <div class="form-group" style="text-align:center">
                    <img src="~/Content/Images/Users/user.png" style="width: 100px; height: 100px; border-radius: 50px" id="detailsImage" />
                </div>
                <div class="form-group">
                    <label class="col-md-5 control-label">Full Name</label>
                    <div class="col-md-7 top-padding">
                        <span id="detailsFullName"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-5 control-label">Mobile</label>
                    <div class="col-md-7 top-padding">
                        <span id="detailsMobile"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-5 control-label">E-mail</label>
                    <div class="col-md-7 top-padding">
                        <span id="detailsEmail"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-5 control-label">Address</label>
                    <div class="col-md-7 top-padding">
                        <span id="detailsAddress"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-5 control-label">Designation</label>
                    <div class="col-md-7 top-padding">
                        <span id="detailsDesignation"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-5 control-label">Type</label>
                    <div class="col-md-7 top-padding">
                        <span id="detailsType"></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal" id="add-button" onclick="gotoUpdate()">Edit</button>
            </div>
        </div>
    </div>
</div>
@*View modal ends*@


<script>
    var click = true;
    var detId;

    $(document).ready(function () {
        var table = $('.table').dataTable();
    });

    function UpdateModel(id) {
        click = true;
        $.ajax({
            type: "POST",
            url: "/FabricDetails/EditValue/" + id,
            dataType: 'json',
            async: false,
            success: function (result) {
                $('#updateId').val(id);
                $('#updateFabricCode').val(result.FabricCode);
                $('#updateFabricName').val(result.FabricName);
                $('#updateDescription').val(result.Description);
                $('#updateStatus').val(result.Status);
                $('#updateModal').modal('show');
            },
            error: function () {
                alert('Failed');
            }
        });
    }


    function ViewModel(id) {
        detId = id;
        $.ajax({
            type: "POST",
            url: "/Employees/Details/" + id,
            dataType: 'json',
            async: false,
            success: function (result) {
                $('#detailsModal').modal('show');
                $('#detailsFullName').html(result.FirstName + ' ' +result.LastName);
                $('#detailsEmail').html(result.Email);
                $('#detailsMobile').html(result.Mobile);
                $('#detailsAddress').html(result.Address);
                $('#detailsEmployeeType').html(result.EmployeeType);
                $('#detailsDesignation').html(result.Designation);
                $('#detailsType').html(result.EmployeeType);
                
                if (result.Image != null) {
                    $.ajax({
                        url: '/Content/Images/Employees/' + result.Image,
                        type: "head",
                        success: function () {
                            $('#detailsImage').attr('src', '/Content/Images/Employees/' + result.Image);
                        },
                        error: function () {
                            console.log('Not available');
                        }
                    });
                }

            },
            error: function () {
                alert('Failed');
            }
        });
    }

    function show_add() {
        click = true;
        $('#addModal').modal('show');
    }

    $(document).ready(function () {
        $('.datepicker').datepicker();

        $("#add-button:not('.clickadded')").click(function () {
            var validator = $('#add-form').data('bootstrapValidator');
            validator.validate();

            if (validator.isValid() && click) {
                click = false;
                var data = $('#add-form').serialize();

                $.ajax({
                    type: "POST",
                    url: "/Employees/Create",
                    data: data,
                    async: false,
                    success: function (result) {
                        console.log(result);
                        if (result == 1) {
                            window.location.href = '/Employees';
                        }
                        else {
                            click = true;
                            $('#error-span').html('Error in insert.');
                        }
                    },
                    error: function () {
                        click = true;
                        alert('Failed');
                    }
                });
            }
            else {
                return false;
            }
        });

        var validate = $('#add-form').bootstrapValidator({
            feedbackIcons: {
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh'
            },
            fields: {
                FirstName: {
                    validators: {
                        stringLength: {
                            min: 2,
                        },
                        notEmpty: {
                            message: 'Please supply first name'
                        }
                    }
                },
                LastName: {
                    validators: {
                        stringLength: {
                            min: 2,
                        },
                        notEmpty: {
                            message: 'Please supply last name'
                        }
                    }
                },
                Mobile: {
                    validators: {
                        stringLength: {
                            min: 8,
                        },
                        notEmpty: {
                            message: 'Please supply mobile number'
                        }
                    }
                },
                Email: {
                    validators: {
                        emailAddress: {
                            message: 'Please supply valid email address'
                        }
                    }
                },
                Address: {
                    validators: {
                        stringLength: {
                            min: 0,
                            max: 100,
                            message: 'Please supply mobile number'
                        }
                    }
                },
                DesignationId: {
                    validators: {
                        notEmpty: {
                            message: 'Please select designation'
                        }
                    }
                },
                EmployeeType: {
                    validators: {
                        notEmpty: {
                            message: 'Please select employee type'
                        }
                    }
                }
            }
        })
        .on('success.form.bv', function (e) {
            $('#success_message').slideDown({ opacity: "show" }, "slow") // Do something ...
            $('#reg_form').data('bootstrapValidator').resetForm();
            e.preventDefault();
            var $form = $(e.target);
            var bv = $form.data('bootstrapValidator');
            $.post($form.attr('action'), $form.serialize(), function (result) {
                console.log(result);
            }, 'json');
        });



        $("#update-button:not('.clickadded')").click(function () {
            var validator = $('#update-form').data('bootstrapValidator');
            validator.validate();
            if (validator.isValid() && click) {
                var data = $('#update-form').serialize();

                $.ajax({
                    type: "POST",
                    url: "/FabricDetails/Edit",
                    data: data,
                    async: false,
                    success: function (result) {
                        console.log(result)
                        if (result == 1) {
                            window.location.href = '/FabricDetails';
                        }
                        else {
                            $("#update-button").removeClass("clickadded");
                            $('#error-span2').html('Error in update. This CODE maybe used before.');
                        }
                    },
                    error: function () {
                        $("#update-button").removeClass("clickadded");
                        alert('Failed');
                    }
                });
            }
            else {
                return false;
            }
        });
        var validate = $('#update-form').bootstrapValidator({
            feedbackIcons: {
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh'
            },
            fields: {
                FabricName: {
                    validators: {
                        stringLength: {
                            min: 5,
                        },
                        notEmpty: {
                            message: 'Please supply fabric name'
                        }
                    }
                },
                FabricCode: {
                    validators: {
                        stringLength: {
                            min: 5,
                        },
                        notEmpty: {
                            message: 'Please supply fabric code'
                        }
                    }
                }
            }
        })
        .on('success.form.bv', function (e) {
            $('#success_message').slideDown({ opacity: "show" }, "slow") // Do something ...
            $('#reg_form').data('bootstrapValidator').resetForm();
            e.preventDefault();
            var $form = $(e.target);
            var bv = $form.data('bootstrapValidator');
            $.post($form.attr('action'), $form.serialize(), function (result) {
                console.log(result);
            }, 'json');
        });
    });

</script>